<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.assignment.fluper">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.main.MainActivity"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.main.ImageActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <activity
            android:name=".ui.main.CreateProductActivity"
            android:label="@string/txt_create_product"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <activity
            android:name=".ui.main.ShowProductActivity"
            android:label="@string/txt_show_product"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <activity
            android:name=".ui.main.ProductDetailsActivity"
            android:label="@string/txt_show_product"
            android:windowSoftInputMode="stateAlwaysHidden" />
    </application>

</manifest>